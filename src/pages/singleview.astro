<style>

	body {
		width: 100vw;
		height: 100vh;
		font: 400 14px/24px Roboto,Arial,sans-serif;
		padding: 20px;
		overflow-x: hidden;
	}
	.header {
		width: 100%;
	}
	.breadText_container {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}
	.breadcrum {
		height: 50px;
		line-height: 24px;
		padding: 13px 0;
		width: 960px;
	}
	.breadcrum a {
		color: #8d8a89;
		text-decoration: none;
	}
	p.item-number {
		height: 50px;
		line-height: 24px;
		padding: 13px 0 13px 14px;
		margin: 0;
		color: #8d8a89;
		width: 320px;
	}
	main {
		margin: 20px;
		margin: 0 auto;
		/* max-width: 1000px; */
		overflow: hidden;
		display: flex;
		flex-direction: column;
	}
	main .content {
		display: flex;
		flex-direction: row;
	}
	section {
		display: block;
		float: left;
		padding: 0 15px;
	}
	article {
		display: block;
		float: left;
		padding: 0 15px;
		width: 960px;
	}
	.section1 {
		float: left;
		margin: 0 0 13px 78px;
	}
	.section1 img {
		width: 320px;
		height: auto;
		position: relative;
		border: 0;
		vertical-align: middle;
	}
	.section1 .smallImg {
		margin-top: 11px;
	}
	.section1 .smallImg img {
		float: left;
		width: 52px;
		height: 77px;
		line-height: 73px;
		margin: 7px 15px 0 0;
		text-align: center;
		border: 1px solid #d1d0d0;
	}

	.text_container {
		position: relative;
		float: left;
		width: 450px;
		margin-left: 50px;
		margin-bottom: 40px;
		font: 400 14px/24px Roboto, Arial,sans-serif;
	}
	.text_container h1 {
		max-height: 68px;
		letter-spacing: 2px;
		font: 600 30px/34px Rajdhani, Arial;
		color: #0e0f11;
	}
	/* .text_container h2 {
		font-size: 24px;
	} */
	.text_container .favorit {
		font: 700 14px/22px Rajdhani,Arial,sans-serif;
		text-transform: uppercase;
		padding: 16px 0;
		padding-right: 16px;
		text-decoration: none;
	}
	.text_container .favorit button {
		display: inline-block;
		font-family: icomoon;
		font-style: normal;
		font-weight: 400;
		font-variant: normal;
	}
	.description p {
		word-wrap: break-word;
	}
	.info {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}
	hr {
		margin-top: 10px;
	}
	.price {
		display: block;
	}
	.price h2 {
		font: 700 24px/36px Rajdhani,Arial;
  		font-size: 24px;
		color: #0e0f11;
		text-align: right;
	}
	.antal_kurv {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: first baseline;
	}
	.antal {
		display: flex;
		flex-direction: row;
		align-items: center;
		float: left;
	}

	.antal div p {
		height: 20px;
		text-align: center;
		padding: 12px 15px;
		border: 1px solid #dfe1df;
		align-items: center;
	}
	.lægIkurv  {
		position: relative;
		font-size: 24px;
		letter-spacing: 2px;
		color: #fff;
		margin: 0 0 20px;
		float: right;
		padding: 0 0 10px;
		background: transparent url(public/button-shadow-small.png) no-repeat 100% 100%;
		background-size: 100% 60px;
	}
	.lægIkurv span {
		letter-spacing: 2px;
		color: #fff;
		display: block;
		background-color: #0e0f11;
		padding: 0 20px;
		cursor: pointer;
		line-height: 40px;
		font-size: 24px;
		border: none;
	}
	.vedKøb {
		float: right;
	}
	.container5 {
		float: left;
	}
	.container5 ul {
		padding-left: 0px;
	}
	.container5 ul li {
		list-style-type: none;
		text-decoration: underline;
	}
	nav {
		width: 240px;
		display: block;
		float: left;
		box-sizing: border-box;
	}
	nav .section3 {
		display: block;
		float: left;
		border-left: 1px solid #d1d0d0;
		text-align: center;
	}
	nav .section3 li {
