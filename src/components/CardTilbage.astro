---
import Button from "./Button.astro";
import Label from "./Label.astro";
const { title, str, pris, link } = Astro.props;
---

<article>
  <Label variant="tilbage">Få tilbage</Label>
  <div class="billede">
    <img src={link} alt="" height="336" width="223" />
  </div>
  <div class="tekst">
    <div class="like">
      <h5>{title}</h5>
      <img src="src/billede/like.svg" alt="like" />
    </div>
    <p class="storrelse">Størrelser: {str}</p>
  </div>
  <div class="sektion">
    <h4>{pris}:-</h4>
    <Button variant="primary">Læs mere</Button>
  </div>
</article>

<style>
  article {
    margin: 10px;
    width: var(--Card-Width);
    display: flex;
    flex-direction: column;
    padding-top: 40px;
    padding: 20px;
    border: var(--Card-Border-farve);
    border-radius: var(--Card-BorderRadius);
    background-color: var(--white);
  }

  .tekst {
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin-block: 10px;
  }
  .label {
    display: flex;
  }
  .like {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  .sektion {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .billede {
    display: flex;
    justify-content: center;
  }
</style>
